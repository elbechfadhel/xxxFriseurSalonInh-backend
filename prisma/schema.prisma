generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum VerificationMethod {
  sms
  account
}

model Customer {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String
  name          String
  phoneE164     String?        @unique
  phoneVerified Boolean        @default(false)
  createdAt     DateTime       @default(now())
  reservations  Reservation[]
}

model Reservation {
  id           String   @id @default(uuid())
  customerName String
  email        String?
  phone        String?
  service      String
  date         DateTime
  createdAt    DateTime @default(now())
  employeeId   String
  employee     Employee @relation(fields: [employeeId], references: [id])
// NEW FIELDS:
  verificationMethod VerificationMethod? // nullable for now (safe)
  customerId   String?
  customer     Customer? @relation(fields: [customerId], references: [id])

  @@unique([employeeId, date], name: "uniq_employee_slot")
}
model Employee {
  id            String         @id @default(uuid())
  name          String
  nameAr        String?
  photo         Bytes?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  reservations  Reservation[]
}
model Feedback {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}
model PhoneOtp {
  id           String   @id @default(cuid())
  phone        String   @unique
  codeHash     String
  expiresAt    DateTime
  attempts     Int      @default(0)
  lockedUntil  DateTime?
  lastSentAt   DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([expiresAt])
}
model SmsLog {
  id        String   @id @default(uuid())
  to        String
  status    String              // "ok" | "error" | "exception"
  errorText String?
  createdAt DateTime @default(now())

  @@index([to, createdAt])
}
