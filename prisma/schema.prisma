// prisma/schema.prisma
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"] // needed for Turso adapter
}

datasource db {
  provider = "sqlite"
  // local file used for migrations; Turso is reached via adapter in code
  url      = "file:./dev.db"
}

enum VerificationMethod {
  sms
  account
}

model Customer {
  id            String         @id @default(uuid())
  email         String         @unique
  passwordHash  String
  name          String
  phoneE164     String?        @unique
  phoneVerified Boolean        @default(false)
  createdAt     DateTime       @default(now())
}

model Reservation {
  id                 String   @id @default(uuid())
  customerName       String
  email              String?
  phone              String?
  service            String
  date               DateTime
  createdAt          DateTime @default(now())

  employeeId         String

  verificationMethod VerificationMethod?
  customerId         String?

  @@unique([employeeId, date], name: "uniq_employee_slot")
  @@index([date])
  @@index([employeeId, date])
}


model Employee {
  id           String         @id @default(uuid())
  name         String
  nameAr       String?
  // SQLite + Prisma don't support Bytes; use String? for URL/base64 instead
  photo        String?
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
}

model Feedback {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  approved  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model PhoneOtp {
  id           String   @id @default(cuid())
  phone        String   @unique
  codeHash     String
  expiresAt    DateTime
  attempts     Int      @default(0)
  lockedUntil  DateTime?
  lastSentAt   DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([expiresAt])
}

model SmsLog {
  id        String   @id @default(uuid())
  to        String
  status    String   // "ok" | "error" | "exception"
  errorText String?
  createdAt DateTime @default(now())

  @@index([to, createdAt])
}
